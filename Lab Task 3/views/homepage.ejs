<div class="container-fluid" ">
  <div class="row">
    <div class="col-10">
        
<h1 ">Most Played</h1>
<div style="margin-bottom: 50px;">
  <% for (let index = 0; index < games.length; index++) { %> <% if
    (games[index].mostplayed) { %>
    <span class="product" style="margin: 10px;">
      <a href="/games/<%= games[index]._id %>"><img src="<%= games[index].img %>" style="width: 250px;height: 200px;"></img></a>
    </span>
    <% } %> <% } %>
</div>

<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" style="margin: 10px; background-color: black;">
  <div class="carousel-indicators">
    <% for (let index = 0; index < games.length; index++) { %>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%= index %>" <% if (index === 0) { %>class="active" <% } %>aria-label="Slide <%= index + 1 %>"></button>
    <% } %>
  </div>
  
  <div class="carousel-inner">
    <% for (let index = 0; index < games.length; index++) { %>
      <% if (index === 0) { %>
        <div class="carousel-item active">
      <% } else { %>
        <div class="carousel-item">
      <% } %>
      <img src="<%= games[index].img %>" class="d-block w-100 carousel-image" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <a href="/games/<%= games[index]._id %>" style="color: white;text-decoration-line: none;"><h5><%= games[index].title %></h5></a>
        <p><%= games[index].description %></p>
      </div>
    </div>
    <% } %>
  </div>

  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<% for (let index = 0; index < events.length; index++) { %> 
  <div class="card" style="width: 250px; margin-top: 20px;">
            <img src="<%= events[index].img %>" class="card-img-top" alt="..." style="width: 248px;height: 200px;">
            <div class="card-body">
              <h5 class="card-title"><%= events[index].title %></h5>
              <h5 class="card-text">Venue:<%= events[index].venue %></h5>
              <h5 class="card-text">Duration:<%= events[index].duration %></h5>
              <a href="/events/<%= events[index]._id %>" class="btn btn-primary">More Info</a>
            </div>
          </div>
<% } %>

<style>
  .carousel-image {
    width: 75%;
    height: 450px;
    object-fit: contain;
  }
</style>
    </div>
    <div class="col-2" style="background-color: black;">
      <div class="sidebar">
        <% for (let index = 0; index < news.length; index++) { %>
          <div class="card mb-3" style="max-width: 18rem;margin-top: 10px;">
            <img src="<%= news[index].img %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= news[index].title %></h5>
              <a href="/news/<%= news[index]._id %>" class="btn btn-primary">Read More</a>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>