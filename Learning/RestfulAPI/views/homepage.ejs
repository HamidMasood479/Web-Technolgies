<h1>Most Played</h1>
<% for (let index = 0; index < games.length; index++) { %> <% if
(games[index].mostplayed) { %>
<span class="product">
  <a href="/games/<%= games[index]._id %>"><img src="<%= games[index].img %>" style="width: 350px;height: 250px;"></img></a>
</span>
<% } %> <% } %>
<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <% for (let index = 0; index < games.length; index++) { %>
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%= index %>" <% if (index === 0) { %>class="active" <% } %>aria-label="Slide <%= index + 1 %>"></button>
    <% } %>
  </div>
  
  <div class="carousel-inner">
    <% for (let index = 0; index < games.length; index++) { %>
      <% if (index === 0) { %>
        <div class="carousel-item active">
      <% } else { %>
        <div class="carousel-item">
      <% } %>
      <img src="<%= games[index].img %>" class="d-block w-100 carousel-image" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <a href="/games/<%= games[index]._id %>" style="color: white;text-decoration-line: none;"><h5><%= games[index].title %></h5></a>
        <p><%= games[index].description %></p>
      </div>
    </div>
    <% } %>
  </div>

  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<style>
  .carousel-image {
    width: 100%;
    height: 750px;
    object-fit: cover;
  }
</style>